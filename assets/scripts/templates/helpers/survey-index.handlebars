{{#each surveys as |survey|}}
<div class="show-survey" survey-id="{{survey._id}}">
  <form>
    <fieldset>
      <label>
        <div>{{survey.title}}</div>

        {{#each survey.questions as |question|}}
        <div class="survey-questions">
          <div class="survey-problem">{{question.problem}}</div>

          </div>
        <input type="radio" name="{{question.id}}" value=true data-bind="checked:IsChecked, checkedValue: true"/>Yes
        <input type="radio" name="{{question.id}}" value=false data-bind="checked:IsChecked, checkedValue: false"/>No
          {{/each}}

      </label>
      <input data-id="{{survey.id}}" class="answer-question" type="submit" name="submit" value="Submit Answer">
    </fieldset>
  </form>
</div>
{{/each}}
</div>
